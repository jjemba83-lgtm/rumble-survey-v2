# Rumble Survey Environment Variables
# Copy this file to .env.local for local development
# Set these in Vercel Dashboard for production

# ===========================================
# FRONTEND (VITE) VARIABLES
# These are exposed to the browser - prefix with VITE_
# ===========================================

# Allow multiple submissions from same device (for testing)
# Set to "true" to disable localStorage duplicate check
VITE_ALLOW_MULTIPLE_SUBMISSIONS=false

# Require token-based authentication
# Set to "true" to require valid invitation tokens
# Set to "false" to allow anyone to take the survey
VITE_REQUIRE_TOKEN=false

# Firebase Client Config (from Firebase Console > Project Settings > Your Apps > Web)
VITE_FIREBASE_API_KEY=AIzaSy...
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123

# ===========================================
# BACKEND (VERCEL) VARIABLES
# These are server-side only - NOT exposed to browser
# ===========================================

# OpenAI API Key (for personalized follow-up questions)
OPENAI_API_KEY=sk-...

# Firebase Admin SDK (from Firebase Console > Project Settings > Service Accounts)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n"

# ===========================================
# LOCAL SCRIPTS
# For running generate-tokens.js locally
# ===========================================

# Survey URL for generated links (defaults to https://your-survey.vercel.app)
SURVEY_BASE_URL=https://your-survey.vercel.app
